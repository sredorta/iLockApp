<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_EditText_FirstName"
        android:layout_gravity="center_horizontal"
        android:hint="first name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_EditText_LastName"
        android:hint="last name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_EditText_email"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_EditText_phone"
        android:hint="phone"
        android:inputType="phone"
        android:phoneNumber="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_EditText_password"
        android:layout_gravity="center_horizontal"
        android:hint="password"
        android:inputType="textPassword"
        android:password="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/fragment_signup_Button_submit"
        android:layout_gravity="center_horizontal" />

</LinearLayout>