<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp">

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/fragment_login_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
        android:src="@drawable/mylogo"
        android:adjustViewBounds="false"
        android:layout_gravity="top|center_horizontal"
            android:layout_weight="2"
            android:layout_margin="20dp"
           />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fragment_container_account_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingBottom="10dp">
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/view_rounded">


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:hint="password"
                android:ems="10"
                android:id="@+id/fragment_signin_with_accounts_EditText_password"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:password="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="CONNECT"
                android:id="@+id/fragment_signin_with_accounts_Button_connect"
                android:layout_weight="1"
                android:alpha="0.95"
                android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Forgot password ?"
                android:id="@+id/textView6"
                android:gravity="center_vertical|center_horizontal"
                android:allowUndo="false" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Connect to an existing account"
                android:id="@+id/fragment_signin_with_accounts_Button_credentials"
                android:layout_margin="10dp"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Create new account"
                android:id="@+id/fragment_signin_with_accounts_Button_create"
                android:gravity="center_vertical|center_horizontal"
                android:allowUndo="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
